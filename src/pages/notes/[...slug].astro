---
import { loadAndFormatCollection } from "@utils/collection";
import { type CollectionEntry, render } from "astro:content";
import EntryPage from "@layouts/EntryPage.astro";
import { NOTES_TITLE } from "src/consts";

type NotesEntry = CollectionEntry<"notes">;

export async function getStaticPaths() {
	const posts = await loadAndFormatCollection("notes") as NotesEntry[];
	return posts.map((post) => ({
		// @ts-expect-error
		params: { slug: post.relativeURL },
		props: post,
	}));
}

const entry = Astro.props;
const { Content } = await render(entry);

const noteTitle = `${entry.data.pubDate.toLocaleString("en-IN", {
	year: "numeric",
	month: "short",
	day: "numeric",
	hour: "numeric",
	minute: "numeric",
	timeZone: "Asia/Kolkata",
	timeZoneName: "short",
})} - ${NOTES_TITLE}`;
---

<EntryPage pageTitle={noteTitle} entry={entry} Content={Content} />
