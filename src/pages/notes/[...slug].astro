---
import { type CollectionEntry, getCollection, render } from "astro:content";
import EntryPage from "@layouts/EntryPage.astro";
import { SITE_TITLE } from "src/consts";

export async function getStaticPaths() {
	const posts = await getCollection("notes", ({ data }) => {
		return import.meta.env.PROD ? data.draft !== true : true;
	});
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<"notes">;

const entry = Astro.props;
const { Content } = await render(entry);

const noteTitle = `${SITE_TITLE}: Notes - ${entry.data.pubDate.toLocaleString(
	"en-IN",
	{
		year: "numeric",
		month: "short",
		day: "numeric",
		hour: "numeric",
		minute: "numeric",
		timeZone: "Asia/Kolkata",
		timeZoneName: "short",
	},
)}`;
---

<EntryPage pageTitle={noteTitle} entry={entry} Content={Content} />
