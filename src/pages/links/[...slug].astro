---
import { loadAndFormatCollection } from '@utils/collection';
import type { EnhancedEntry } from '@appTypes/entries';
import { render } from 'astro:content';
import EntryPage from '@layouts/EntryPage.astro';
import { LINKS_TITLE } from 'src/consts';

export async function getStaticPaths() {
	const posts = await loadAndFormatCollection('links');
	return posts.map((post) => ({
		params: { slug: post.relativeURL },
		props: post,
	}));
}

type Props = EnhancedEntry<'links'>;
const entry = Astro.props;
const { Content } = await render(entry);
---

<EntryPage
	pageTitle=`${entry.data.title} - ${LINKS_TITLE}`
	entry={entry}
	Content={Content}
/>
