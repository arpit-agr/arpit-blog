---
import { loadAndFormatCollection } from "@utils/collection";
import { type CollectionEntry, render } from "astro:content";
import EntryPage from "@layouts/EntryPage.astro";
import { LINKS_TITLE } from "src/consts";

type LinksEntry = CollectionEntry<"links">;

export async function getStaticPaths() {
	const posts = await loadAndFormatCollection("links") as LinksEntry[];
	return posts.map((post) => ({
		// @ts-expect-error
		params: { slug: post.relativeURL },
		props: post,
	}));
}

const entry = Astro.props;
const { Content } = await render(entry);
---

<EntryPage
	pageTitle=`${entry.data.title} - ${LINKS_TITLE}`
	entry={entry}
	Content={Content}
/>
