---
import EntryList from "@components/EntryList.astro";

const { sectionTitle, sectionDesc, page, entries } = Astro.props;
---

<div class="visually-hidden">
	<div class="center p-space-m">
		{
			!!sectionTitle ? (
				<hgroup class="flow align-self-stretch">
					<h1>{sectionTitle}</h1>
					<p>{sectionDesc}</p>
				</hgroup>
			) : (
				<div class="align-self-stretch">
					<p>{sectionDesc}</p>
				</div>
			)
		}
	</div>
</div>
<EntryList entries={entries} />
{
	page.lastPage > 1 && (
		<div class="pagination-control text-box-trim">
			<div class="center p-space-m">
				<div class="cluster align-self-stretch">
					{page.url.prev && (
						<a href={page.url.prev} rel="prev" class="text-box-trim">
							&larr; Newer Entries
						</a>
					)}
					{page.url.next && (
						<a href={page.url.next} rel="next" class="text-box-trim">
							Older Entries &rarr;
						</a>
					)}
				</div>
			</div>
		</div>
	)
}
