---
interface Props {
	isVisuallyHidden: boolean;
	sectionTitle?: string;
	sectionDesc?: string;
}

const { isVisuallyHidden, sectionTitle, sectionDesc } = Astro.props;
---

<div
	class:list={[
		'feed-header',
		'pb-space-m',
		{ 'visually-hidden': isVisuallyHidden },
	]}
>
	<div class="center pi-space-m">
		{
			!!sectionTitle && !!sectionDesc ? (
				<hgroup class="text-balance text-box-trim-end align-self-stretch">
					<h1>{sectionTitle}</h1>
					<span> -</span>
					<span>{sectionDesc}</span>
				</hgroup>
			) : !!sectionTitle ? (
				<h1 class="align-self-stretch">{sectionTitle}</h1>
			) : (
				<p class="align-self-stretch">{sectionDesc}</p>
			)
		}
	</div>
</div>
