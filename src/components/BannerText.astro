---
import type { HTMLTag, Polymorphic } from "astro/types";
type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;
const { as: Tag = "div" } = Astro.props;

import { SITE_TITLE } from "@src/consts";
---

<div class="banner-text">
	<Tag class="pi-space-gutter text-box-trim-end leading-snug">
		<a href="/">
			<span class="text-fit">
				<span><span class="text-box-trim-end">{SITE_TITLE}</span></span>
				<span class="text-box-trim-end" aria-hidden="true">{SITE_TITLE}</span>
			</span>
		</a>
	</Tag>
</div>
