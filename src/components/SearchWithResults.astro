<div>
	<div class="center pi-space-m">
		<div class="align-self-stretch">
			<search>
				<form
					id="search-form"
					class="stack"
					action="https://duckduckgo.com/"
					method="get"
				>
					<label
						class:list={['heading-1', 'text-box-trim', 'visually-hidden']}
						for="search-term"
					>
						Search
					</label>
					<div class="align-self-stretch">
						<input
							class="text-box-trim"
							type="search"
							id="search-term"
							name="q"
							placeholder="Type to searchâ€¦"
						/>
						<input aria-hidden="true" hidden name="sites" value="arpit.blog" />
						<!-- search and clear button -->
						<div class="sidebar">
							<!-- search button -->
							<button type="submit" class="search-btn">Search</button>
							<!-- clear button -->
							<button class="clear-btn" aria-label="Clear search term">
								Clear
							</button>
						</div>
					</div>
				</form>
			</search>
			<!-- search results -->
			<div id="search-results" class="flow hidden">
				<h2 id="search-results-count" class="heading-4" aria-live="polite">
					Results
				</h2>
				<ol id="search-results-list"></ol>
			</div>
		</div>
	</div>
</div>
