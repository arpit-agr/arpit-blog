---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<span class="pub-date text-box-trim">
	Posted on
	<time datetime={date.toISOString()}>
		{
			date.toLocaleString('en-IN', {
				weekday: 'short',
				year: 'numeric',
				month: 'short',
				day: 'numeric',
				timeZone: 'Asia/Kolkata',
			})
		}
	</time>
</span>
